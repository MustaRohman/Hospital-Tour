<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Frontend.PostLoginActivity"
    tools:showIn="@layout/activity_post_login">

    <TextView
        android:id="@+id/user_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logged in as:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>


    <TextView
        android:id="@+id/modify_tour_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Tour"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/user_textview"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"/>

    <ScrollView
        android:id="@+id/modify_tour_scroll"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@id/modify_tour_textview"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border">

        <LinearLayout
            android:id="@+id/modify_tourlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST1234"
                android:textColor="@android:color/black"
                android:gravity="left"
                android:padding="10dp"
                android:textStyle="italic"
                android:background="@android:color/transparent"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/create_tour_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_tour"
        android:textStyle="bold"
        android:layout_below="@id/modify_tour_scroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:onClick="onClickCreateTourBtn"
        android:background="@drawable/border"/>


</RelativeLayout>
