<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mustarohman.prototype.AddNodeActivity"
    tools:showIn="@layout/activity_add_node">

    <TextView
        android:id="@+id/logged_in_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logged_in"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"/>

    <TextView
        android:id="@+id/tourcode_text"
        android:text="@string/tourcode_text"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logged_in_text"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tour_code"
        android:text="812AXB"
        android:textSize="35dp"
        android:layout_below="@id/tourcode_text"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:id="@+id/inner_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameroom_edit"
            android:hint="Name of the Room"
            android:backgroundTint="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:id="@+id/buttons_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/nameroom_edit">

            <Button
                android:id="@+id/viewstops_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Stops"
                android:onClick="onViewStopsBtnClick"
                android:background="@android:color/transparent"
                android:padding="7dp"
                android:elevation="5dp"
                android:translationZ="5dp"/>

            <Button
                android:id="@+id/addroom_btn"
                android:text="Add Room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickAddNode"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
